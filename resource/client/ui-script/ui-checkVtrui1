#!/bin/bash
if [[ -f "/opt/de_GWD/vtrui1/config.json" ]]; then
domain=$(jq -r '.outbounds[0].settings.vnext[0].address' /opt/de_GWD/vtrui1/config.json)
port=$(jq -r '.outbounds[0].settings.vnext[0].port' /opt/de_GWD/vtrui1/config.json)

if [[ $port == "443" ]]; then
nodecheck=$domain
else
nodecheck=$domain:$port
fi

jq -r --arg nodecheck $nodecheck '.v2node[] | select(.domain == $nodecheck) | .name' /opt/de_GWD/0conf

if [[ $port == "443" ]]; then
echo $domain
else
echo "$domain:$port"
fi
rm -rf /tmp/vtruiDomains
fi
