#!/bin/bash
domain=$(jq -r '.outbounds[0].settings.vnext[0].address' /opt/de_GWD/vtrui/config.json)
port=$(jq -r '.outbounds[0].settings.vnext[0].port' /opt/de_GWD/vtrui/config.json)

if [[ "$port" == "443" ]]; then
nodecheck=$domain
else
nodecheck=$domain:$port
fi

nodeName=$(jq -r --arg nodecheck $nodecheck '.v2node[] | select(.domain == $nodecheck) | .name' /opt/de_GWD/0conf)

jq -r --arg nodeName $nodeName '.v2node | map(.name == $nodeName) | index(true)' /opt/de_GWD/0conf